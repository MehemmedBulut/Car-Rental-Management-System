<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Carella</title>
    <link rel="shortcut icon" type="image/png" href="~/assets/images/logos/carrent.png" />
    <link rel="stylesheet" href="~/assets/css/styles.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <style>
        .dt-button {
            display: inline-flex !important;
            padding: 8px 12px !important;
            background-color: #595bdb !important;
            text-decoration: none !important;
            color: #fff !important;
            font: inherit !important;
            cursor: pointer !important;
            outline: inherit !important;
            border-radius: 4px !important;
            margin-left: 5px !important;
            margin-bottom: 15px !important;
        }
    </style>
</head>


<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-center mt-2">
                    <a asp-action="Index" class="text-decoration-none d-flex align-items-center">
                        <img src="~/assets/images/logos/carrent.png" style="object-fit: cover; width: 150px; height: 65px;" alt="" class="me-2" />
                    </a>

                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>

                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar mt-5" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Home" asp-action="Index" aria-expanded="false">
                                <span>
                                    <i style="font-size:25px" class="bi bi-house-fill"></i>
                                </span>
                                <span class="hide-menu">Ana səhifə</span>
                            </a>
                        </li>
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Siyahılar</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Brands" asp-action="Index" aria-expanded="false">
                                <span>
                                    <i style="font-size:25px" class="bi bi-card-checklist"></i>
                                </span>
                                <span class="hide-menu">Markalar</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Types" asp-action="Index" aria-expanded="false">
                                <span>
                                    <i style="font-size:25px" class="bi bi-card-heading"></i>
                                </span>
                                <span class="hide-menu">Modellər</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Car" asp-action="Index" aria-expanded="false">
                                <span>
                                    <i style="font-size:25px" class="bi bi-car-front-fill"></i>
                                </span>
                                <span class="hide-menu">Avtomobillər</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Driver" asp-action="Index" aria-expanded="false">
                                <span>
                                    <i style="font-size:25px" class="bi bi-person-vcard-fill"></i>
                                </span>
                                <span class="hide-menu">Sürücülər</span>
                            </a>
                        </li>
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Tətbiqlər</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Rent" asp-action="Index" aria-expanded="false">
                                <span>
                                    <i style="font-size:25px" class="bi bi-key-fill"></i>
                                </span>
                                <span class="hide-menu">Kirayə</span>
                            </a>
                        </li>
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Xüsusi</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Users" asp-action="Index" aria-expanded="false">
                                <span>
                                    <i style="font-size:25px" class="bi bi-person-circle"></i>
                                </span>
                                <span class="hide-menu">Hesablar</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="MoneyBox" asp-action="Index" aria-expanded="false">
                                <span>
                                    <i style="font-size:25px" class="bi bi-piggy-bank-fill"></i>
                                </span>
                                <span class="hide-menu">Kassa</span>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-icon-hover" href="javascript:void(0)">
                                <i class="ti ti-bell-ringing"></i>
                                <div class="notification bg-primary rounded-circle"></div>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">

                            <li class="nav-item dropdown">
                                <a  href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-box-arrow-right" style="font-size:25px;color:black"></i>
                                        <span class="ml-2" style="color: black; font-size: 18px; font-weight: bold;  padding: 0px 10px; border-radius: 5px;">@User.Identity.Name</span>
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                    <div class="message-body">
                                        <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-primary mx-3 mt-2 d-block">Çıxış</a>
                                    </div>
                                </div>
                            </li>



                            
                            
                        </ul>
                    </div>
                </nav>
            </header>
            <!--  Header End -->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts",false)
    <script src="~/assets/js/sidebarmenu.js"></script>
    <script src="~/assets/js/app.min.js"></script>
    <script src="~/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/assets/js/dashboard.js"></script>

</body>

</html>
