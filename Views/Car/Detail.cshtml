@model Car

<style>
    /* Özelleştirilmiş CSS stilleri */
    .car-card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .car-image-container {
        max-width: 100%;
        height: 200px; /* Tüm fotoğrafları aynı yükseklikte göstermek için ayarlayabilirsiniz */
        overflow: hidden;
    }

    .car-image {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover; /* Fotoğrafı belirlediğiniz boyutta oturtur */
    }

    .car-details {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-top: 20px;
    }

        .car-details > div {
            flex-basis: calc(33.33% - 10px);
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
        }

        .car-details h5 {
            margin-bottom: 10px;
        }
</style>

<div class="container mt-4">
    <div class="car-card">
        <h5>Araç Resimleri</h5>
        <div class="row">
            @foreach (CarImage item in Model.CarImages)
            {
                <div class="col-md-4 mb-3">
                    <div class="car-image-container">
                        <img class="car-image" src="~/assets/images/cars/@item.Url" alt="Car Image" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="car-card">
        <h5>Avtomobil Detalları</h5>
        <div class="car-details">
            <div>
                <h5>Marka:</h5>
                <p>@Model.Brand.Name</p>
            </div>
            <div>
                <h5>Model:</h5>
                <p>@Model.Type.Name</p>
            </div>
            <div>
                <h5>Sürət qutusu:</h5>
                <p>@Model.Transmission.Name</p>
            </div>
            <div>
                <h5>Yanacaq növü:</h5>
                <p>@Model.Fuel.Name</p>
            </div>
            <div>
                <h5>Rəng:</h5>
                <p>@Model.Color</p>
            </div>
            <div>
                <h5>Buraxılış ili:</h5>
                <p>@Model.PassYear</p>
            </div>
            <div>
                <h5>Günlük qiymət:</h5>
                <p>@Model.DailyPrice$</p>
            </div>
            <div>
                <h5>Avtomobilin nömrəsi:</h5>
                <p>@Model.CarNumber</p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</div>
